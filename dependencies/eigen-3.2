#!/bin/bash
#
# Setup Eigen 3.2
#
. .travis/common.sh

# Checkout Eigen
cd "$build_dir"
wget --quiet "http://bitbucket.org/eigen/eigen/get/3.2.1.tar.gz"
tar xzf 3.2.1.tar.gz
cd "$build_dir/eigen-eigen-6b38706d90a9/"
mkdir -p "$build_dir/eigen-eigen-6b38706d90a9/_build"
cd "$build_dir/eigen-eigen-6b38706d90a9/_build"
cmake .. -DCMAKE_INSTALL_PREFIX:STRING="$install_dir" \
	 -Dpkg_config_libdir:STRING="$install_dir/lib"
make
make install

# Check install
pkg-config --modversion "eigen3 >= 3.2.1"
pkg-config --cflags "eigen3 >= 3.2.1"
